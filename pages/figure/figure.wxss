/* pages/figure/figure.wxss */

page{ background: #eee}
.page{ padding: 20rpx; display: flex; justify-content: space-between; flex-wrap: wrap}
.item{ width: 48%; background: #FFF; margin-bottom:25rpx; height: 450rpx; position: relative }
.item image{ width: 100%; height: 300rpx; display: block; border-radius: 5rpx}
.title{ padding-left:50rpx; font-size: 32rpx; margin: 20rpx 0; text-overflow: ellipsis }
.time{ font-size: 26rpx; color:#999; padding-left: 50rpx;  }
.tips{ position: absolute; width: 30rpx; border: 1px solid #F00; bottom:35rpx; font-size: 26rpx; color: #F00; padding: 10rpx 0; text-align: center}
