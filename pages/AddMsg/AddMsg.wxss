/* pages/AddMsg/AddMsg.wxss */
page{ background: #eee}
.edit-wrap{ padding: 30rpx; background: #FFF; border-bottom:1rpx solid #ddd }
.title{ border-bottom:1rpx solid #eee; font-size: 32rpx; }
.content{ margin:20rpx 0; font-size: 32rpx; height: 400rpx; width: 100% }
.submit{ margin: 30rpx;}
.img-add{ width: 140rpx; height: 140rpx; border: 1rpx dashed #ccc; text-align: center; font-size: 80rpx; line-height: 140rpx; color: #ccc}

.upload-wrap{ display: flex; flex-wrap: wrap; }
.img-item{ width: 140rpx; height: 140rpx; margin-right:20rpx; position: relative; }
.img-item icon{ position: absolute; right: -15rpx; top: -15rpx; border-radius: 100%; background: #FFF}
.img-item image{ width: 100%; height: 100%; display: block;}